#include<stdio.h>
void main()
{
    int num,i,even_sum=0,a[100];
    printf("enter the no of elements:\n");
    scanf("%d",&num);
    for(i=0;i<num;i++)
    {
        scanf("%d",&a[i]);

    }
    for(i=0;i<num;i++)
    {
        if(a[i]%2==0)
        even_sum=even_sum+a[i];
    }
    printf("the sum of all even nos of array:%d\n",even_sum);
    
}
